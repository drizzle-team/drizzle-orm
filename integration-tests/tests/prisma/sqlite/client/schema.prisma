generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

generator drizzle {
  provider = "drizzle-prisma-generator"
  output   = "./drizzle"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

		"@typescript-eslint/rule-tester": "^8",
		"eslint": "^8 || ^9",
		"eslint-doc-generator": "^1.7.1",
		"eslint-plugin-eslint-plugin": "^6.2.0",
		"typescript": "^5.2.2",
		"typescript-eslint": "^8",
